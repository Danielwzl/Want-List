<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.prog4.wangz_jamileh.wishlist.SignupActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <EditText
        android:id="@+id/sign_email"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:layout_marginBottom="10dp"
        android:letterSpacing="0.025"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/sign_pw"
        android:layout_width="311dp"
        android:layout_height="43dp"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Password"
        android:layout_gravity="center_horizontal"
        android:inputType="textPassword"
        android:letterSpacing="0.025"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/confirm_pw"
        android:layout_width="311dp"
        android:layout_height="43dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Re-enter password"
        android:inputType="textPassword"
        android:letterSpacing="0.025"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/sign_uname"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/white"
        android:hint="Username"
        android:letterSpacing="0.025"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/sign_fname"
            android:layout_width="144dp"
            android:layout_height="43dp"
            android:backgroundTint="@color/white"
            android:hint="First name"
            android:layout_marginRight="10dp"
            android:letterSpacing="0.025"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/sign_lname"
            android:layout_width="160dp"
            android:layout_height="43dp"
            android:backgroundTint="@color/white"
            android:hint="Last name"
            android:letterSpacing="0.025"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/signup_dob"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="10dp"
        android:editable="false"
        android:layout_gravity="center_horizontal"
        android:hint="Birthday"
        android:letterSpacing="0.025"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="16dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/sign_phone"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="10dp"
        android:hint="Phone"
        android:letterSpacing="0.025"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"
        android:textColorHint="#fff"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="447dp" />

    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="505dp">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="91dp"
            android:layout_height="31dp"
            android:layout_marginLeft="61dp"
            android:backgroundTint="@color/white"
            android:buttonTint="@color/white"
            android:letterSpacing="0.025"
            android:onClick="onRadioButtonClicked"
            android:text="male"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="369dp" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="97dp"
            android:layout_height="31dp"
            android:layout_marginLeft="42dp"
            android:backgroundTint="@color/white"
            android:buttonTint="@color/white"
            android:letterSpacing="0.025"
            android:onClick="onRadioButtonClicked"
            android:text="female"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/male"
            tools:layout_editor_absoluteY="369dp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
    <Button
        android:id="@+id/signup"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:background="@drawable/sign_in_button"
        android:elevation="10dp"
        android:layout_marginRight="20dp"
        android:text="SIGN UP"
        android:textColor="#D2818D"
        android:textColorHint="#D2818D"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="507dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:background="@drawable/sign_in_button"
        android:elevation="7dp"
        android:onClick="goback"
        android:text="BACK"
        android:textColor="#B56576"
        android:textColorHint="#B56576"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="507dp" />
    </LinearLayout>

</LinearLayout>
