<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prog4.wangz_jamileh.wishlist.SignupActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <EditText
        android:id="@+id/signup_dob"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:hint="Birthday"
        android:editable="false"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_lname" />

    <EditText
        android:id="@+id/confirm_pw"
        android:layout_width="311dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Re-enter password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_pw" />

    <EditText
        android:id="@+id/sign_fname"
        android:layout_width="144dp"
        android:layout_height="43dp"
        android:hint="First name"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_uname" />

    <Button
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/gender"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.449" />


    <EditText
        android:id="@+id/sign_lname"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:hint="Last name"
        android:layout_marginStart="6dp"
        app:layout_constraintLeft_toRightOf="@+id/sign_fname"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_uname" />

    <EditText
        android:id="@+id/sign_phone"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:hint="Phone"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_dob" />

    <EditText
        android:id="@+id/sign_pw"
        android:layout_width="311dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_email" />

        <EditText
            android:id="@+id/sign_email"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            tools:layout_editor_absoluteY="2dp"
            tools:layout_editor_absoluteX="8dp" />

        <EditText
            android:id="@+id/sign_uname"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:hint="Username"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/confirm_pw" />

    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/sign_phone"
        tools:layout_editor_absoluteX="0dp">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="91dp"
            android:layout_height="31dp"
            android:layout_marginLeft="61dp"
            android:onClick="onRadioButtonClicked"
            android:text="male"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="369dp" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="97dp"
            android:layout_height="31dp"
            android:layout_marginLeft="42dp"
            android:onClick="onRadioButtonClicked"
            android:text="female"
            app:layout_constraintLeft_toRightOf="@+id/male"
            tools:layout_editor_absoluteY="369dp" />
    </RadioGroup>


</android.support.constraint.ConstraintLayout>
